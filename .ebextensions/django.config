option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: cms.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    '/static': 'static/'
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: web.settings
    MYSQLCLIENT_CFLAGS: "-I/usr/include/mysql"
    MYSQLCLIENT_LDFLAGS: "-L/usr/lib64/mysql -lmysqlclient"
    PKG_CONFIG_PATH: "/usr/lib64/mysql/pkgconfig"

commands:
  01_install_mysql_devel:
    command: "yum install -y mysql-devel"
  02_update_pip:
    command: "/opt/python/run/venv/bin/pip install --upgrade pip"
